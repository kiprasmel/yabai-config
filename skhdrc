# terminal
alt - return : "${XDG_CONFIG_HOME:-$HOME/.config}/yabai/scripts/iterm"
# browser
alt - s : open "http://"

# Show system statistics
fn + lalt - 1 : "${HOME}"/.config/yabai/scripts/show-cpu
fn + lalt - 2 : "${HOME}"/.config/yabai/scripts/show-mem
fn + lalt - 3 : "${HOME}"/.config/yabai/scripts/yabai-bat
fn + lalt - 4 : "${HOME}"/.config/yabai/scripts/show-disk
fn + lalt - 5 : "${HOME}"/.config/yabai/scripts/show-song

# Navigation
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# Moving windows
shift + alt - h : yabai -m window --warp west
shift + alt - j : yabai -m window --warp south
shift + alt - k : yabai -m window --warp north
shift + alt - l : yabai -m window --warp east

# Move focus container to workspace
shift + alt - m : yabai -m window --space last; yabai -m space --focus last
shift + alt - p : yabai -m window --space prev; yabai -m space --focus prev
shift + alt - n : yabai -m window --space next; yabai -m space --focus next

# switch spaces (requires SIP off)
ctrl - 1 : yabai -m space --focus 1
ctrl - 2 : yabai -m space --focus 2
ctrl - 3 : yabai -m space --focus 3
ctrl - 4 : yabai -m space --focus 4
ctrl - 5 : yabai -m space --focus 5
ctrl - 6 : yabai -m space --focus 6
ctrl - 7 : yabai -m space --focus 7
ctrl - 8 : yabai -m space --focus 8
ctrl - 9 : yabai -m space --focus 9
ctrl - 0 : yabai -m space --focus 10

alt - 1 : yabai -m space --focus 11
alt - 2 : yabai -m space --focus 12
alt - 3 : yabai -m space --focus 13
alt - 4 : yabai -m space --focus 14
alt - 5 : yabai -m space --focus 15
alt - 6 : yabai -m space --focus 16
alt - 7 : yabai -m space --focus 17
alt - 8 : yabai -m space --focus 18
alt - 9 : yabai -m space --focus 19
alt - 0 : yabai -m space --focus 20

# comment to disable swap
shift + ctrl - 1 : yabai -m window --space 1 #; yabai -m space --focus 1
shift + ctrl - 2 : yabai -m window --space 2 #; yabai -m space --focus 2
shift + ctrl - 3 : yabai -m window --space 3 #; yabai -m space --focus 3
shift + ctrl - 4 : yabai -m window --space 4 #; yabai -m space --focus 4
shift + ctrl - 5 : yabai -m window --space 5 #; yabai -m space --focus 5
shift + ctrl - 6 : yabai -m window --space 6 #; yabai -m space --focus 6
shift + ctrl - 7 : yabai -m window --space 7 #; yabai -m space --focus 7
shift + ctrl - 8 : yabai -m window --space 8 #; yabai -m space --focus 8
shift + ctrl - 9 : yabai -m window --space 9 #; yabai -m space --focus 9
shift + ctrl - 0 : yabai -m window --space 10 #; yabai -m space --focus 10

shift + alt - 1 : yabai -m window --space 11 #; yabai -m space --focus 11
shift + alt - 2 : yabai -m window --space 12 #; yabai -m space --focus 12
shift + alt - 3 : yabai -m window --space 13 #; yabai -m space --focus 13
shift + alt - 4 : yabai -m window --space 14 #; yabai -m space --focus 14
shift + alt - 5 : yabai -m window --space 15 #; yabai -m space --focus 15
shift + alt - 6 : yabai -m window --space 16 #; yabai -m space --focus 16
shift + alt - 7 : yabai -m window --space 17 #; yabai -m space --focus 17
shift + alt - 8 : yabai -m window --space 18 #; yabai -m space --focus 18
shift + alt - 9 : yabai -m window --space 19 #; yabai -m space --focus 19
shift + alt - 0 : yabai -m window --space 20 #; yabai -m space --focus 20

